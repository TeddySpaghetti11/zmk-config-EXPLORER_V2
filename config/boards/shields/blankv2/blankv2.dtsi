#include <dt-bindings/zmk/matrix_transform.h>
#include "blankv2-layouts.dtsi"

&kscan {
    compatible = "zmk,kscan-gpio-matrix";
    diode-direction = "col2row";
    wakeup-source;

    /* ROWS — 5 rows */
    row-gpios =
        <&gpioc 6 GPIO_ACTIVE_LOW>,  /* pin 9  → PC6 → row0 */
        <&gpiob 5 GPIO_ACTIVE_LOW>,  /* pin 13 → PB5 → row1 */
        <&gpiob 4 GPIO_ACTIVE_LOW>,  /* pin 12 → PB4 → row2 */
        <&gpioe 6 GPIO_ACTIVE_LOW>,  /* pin 11 → PE6 → row3 */
        <&gpiod 7 GPIO_ACTIVE_LOW>;  /* pin 10 → PD7 → row4 */

    /* COLUMNS — 6 columns */
    col-gpios =
        <&gpiob 2 GPIO_ACTIVE_LOW>,  /* pin 19 → PB2 → col0 */
        <&gpiob 3 GPIO_ACTIVE_LOW>,  /* pin 18 → PB3 → col1 */
        <&gpiob 1 GPIO_ACTIVE_LOW>,  /* pin 17 → PB1 → col2 */
        <&gpiob 6 GPIO_ACTIVE_LOW>,  /* pin 16 → PB6 → col3 */
        <&gpiob 5 GPIO_ACTIVE_LOW>,  /* pin 15 → PB5 → col4 */
        <&gpiob 7 GPIO_ACTIVE_LOW>;  /* pin 14 → PB7 → col5 */
};

default_transform: default_transform {
    compatible = "zmk,matrix-transform";
    columns = <6>;
    rows = <5>;

    map = <
        RC(0,0) RC(0,1) RC(0,2) RC(0,3) RC(0,4) RC(0,5)
        RC(1,0) RC(1,1) RC(1,2) RC(1,3) RC(1,4) RC(1,5)
        RC(2,0) RC(2,1) RC(2,2) RC(2,3) RC(2,4) RC(2,5)
        RC(3,0) RC(3,1) RC(3,2) RC(3,3) RC(3,4) RC(3,5)
        RC(4,0) RC(4,1) RC(4,2) RC(4,3) RC(4,4) RC(4,5)
    >;
};